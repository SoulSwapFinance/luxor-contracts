contract LuxorBridgeConverter is Ownable, Pausable {
    using SafeMath for uint256;

    address public immutable treasury;
    address public immutable dao;

    address public immutable nativeLUX;
    address[] private bridgesLUX;

    uint256 public fee;

    constructor ( address _treasury, address _dao, address _nativeLUX ) {
        require( _treasury != address(0) );
        treasury = _treasury;

        require( _dao != address(0) );
        dao = _dao;

        require( _nativeLUX != address(0) );
        nativeLUX = _nativeLUX;
    }

    function addBridgeContract( address _bridgeLUX ) external onlyManager {
        require( _bridgeLUX != address(0) );
        bridgesLUX.push( _bridgeLUX );
    }

    function removeBridgeContract( uint _index ) external onlyManager {
        bridgesLUX[ _index ] = address(0);
    }

    function isBridgeContract( address _bridgeLUX ) public view returns (bool) {
        for( uint i = 0; i < bridgesLUX.length; i++ ) {
            if ( bridgesLUX[i] != address(0) ) {
                if ( bridgesLUX[i] == _bridgeLUX ) return true;
            }
        }
        return false;
    }

    function setFee( uint256 _fee ) external onlyManager {
        fee = _fee;
    }

    function getFee(uint256 _amount) private view returns (uint256, uint256) {
        uint256 taxAmount = _amount.mul( fee ).div( 1000 );
        uint256 transferAmount = _amount.sub( taxAmount );
        return (taxAmount, transferAmount);
    }

    function downstream( address _bridgeLUX, uint256 _amount ) external whenNotPaused {
        require( isBridgeContract( _bridgeLUX ) , "Token is not whitelisted" );
        require( IERC20( nativeLUX ).balanceOf( address(this) ) >= _amount , "Insufficient native token amount" );

        IERC20( _bridgeLUX ).transferFrom( msg.sender, address(this), _amount );

        ( uint256 taxAmount, uint256 transferAmount ) = getFee( _amount );
        IERC20( nativeLUX ).transfer( msg.sender, transferAmount );
        IERC20( nativeLUX ).transfer( dao, taxAmount );
    }

    function upstream( address _bridgeLUX, uint256 _amount ) external whenNotPaused {
        require( isBridgeContract( _bridgeLUX ) , "Token is not whitelisted" );
        require( IERC20( _bridgeLUX ).balanceOf( address(this) ) >= _amount , "Insufficient bridge token amount" );

        IERC20( nativeLUX ).transferFrom( msg.sender, address(this), _amount );

        ( uint256 taxAmount, uint256 transferAmount ) = getFee( _amount );
        IERC20( _bridgeLUX ).transfer( msg.sender, transferAmount );
        IERC20( _bridgeLUX ).transfer( dao, taxAmount );
    }

    function sendTokens( address _token, address recipient, uint256 _amount) external onlyManager {
        require( IERC20( _token ).balanceOf( address(this) ) >= _amount, "Not enough tokens" );

        IERC20( _token ).transfer( recipient, _amount );
    }
}